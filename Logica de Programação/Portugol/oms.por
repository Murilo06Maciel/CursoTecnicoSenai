programa {
  //OMS

  funcao inicio() 
  {
    real peso, altura, imc
    escreva ("digite o valor do peso: ")
    leia (peso)
    escreva ("digite o valor da altura: ")
    leia (altura)

    imc = peso/(altura*altura)

    escreva("\nO valor do imc é igual a: ", imc)
    escreva ("\n -------------------------------------------------------------------------------------------------------------------------------------------------------")


    se (imc < 18.5)
    {
      escreva ("\nA pessoa está abaixo do peso.")
      escreva ("\n -------------------------------------------------------------------------------------------------------------------------------------------------------")
    }
    senao
    {
      se (imc > 18.5 e imc < 24.9)
      {
        escreva ("\nA pessoa está com o peso normal.")
        escreva ("\n -------------------------------------------------------------------------------------------------------------------------------------------------------")
      }
      senao
      {
        se (imc > 25 e imc < 29.9)
        escreva ("\nA pessoa está com sobrepeso.")
        escreva ("\n -------------------------------------------------------------------------------------------------------------------------------------------------------")
      }   
    }
    se (imc >= 30)
        escreva ("\nA pessoa está com obesidade.")
        escreva ("\n -------------------------------------------------------------------------------------------------------------------------------------------------------")    
  }
}