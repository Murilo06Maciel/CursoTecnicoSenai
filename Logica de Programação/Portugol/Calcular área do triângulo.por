programa {
  //Calcular área do triângulo
  funcao inicio() 
  {
    real base, altura, area, 
    escreva ("digite o valor da base: ")
    leia (base)
    escreva ("digite o valor da altura: ")
    leia (altura)

    area = (base*altura)/2

    escreva("\nA área do triângulo é igual a: ", area)
  }
}
